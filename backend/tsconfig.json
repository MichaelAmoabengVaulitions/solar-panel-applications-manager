{
  "compilerOptions": {
    "target": "ES2020",                  // Target modern JavaScript for performance.
    "module": "CommonJS",               // Use CommonJS for Node.js compatibility.
    "lib": ["ES2020", "DOM"],           // Include standard ES2020 and browser libraries.
    "strict": true,                     // Enable all strict type-checking options.
    "esModuleInterop": true,            // Enable compatibility with CommonJS modules.
    "forceConsistentCasingInFileNames": true, // Enforce consistent file naming.
    "skipLibCheck": true,               // Skip type checks for libraries to speed up builds.
    "outDir": "./dist",                 // Output compiled files into the `dist` directory.
    "rootDir": "./src",                 // Specify the source directory.
    "moduleResolution": "node",        // Resolve modules in Node.js style.
    "resolveJsonModule": true,          // Allow importing JSON files.
    "noImplicitAny": true,              // Raise an error on implicit `any` types.
    "baseUrl": "./",                    // Set base path for imports.
    "paths": {                          // Configure path aliases.
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],                   // Include the `src` directory.
  "exclude": ["node_modules", "dist"]  // Exclude `node_modules` and `dist` from the compilation.
}
